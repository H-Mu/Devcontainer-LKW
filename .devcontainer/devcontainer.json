{
  "name": "Linguistik-Kraftwerk DevContainer",
  "image": "mcr.microsoft.com/devcontainers/python:3.10-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode"
    },
    "ghcr.io/devcontainers/features/desktop-lite:1": {},
    "ghcr.io/devcontainers/features/sshd:1": {
      "START_SSHD": "true",
      "NEW_PASSWORD": "qwertz."
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "./local-features/devtools": {}
  },
  "runArgs": [
    "--env", "DISPLAY=${localEnv:DISPLAY}",
    "--network=host",
    "--gpus=all"
  ],
  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached"
  ],
  "appPort": [
    "127.0.0.1:2229:2229",
    "127.0.0.1:6087:6087",
    "127.0.0.1:5908:5908"
  ],
  "portsAttributes": {
    "6087": {
      "label": "desktop"
    },
    "5908": {
      "label": "vnc"
    }
  },
  "remoteEnv": {
    "GH_TOKEN": "${localEnv:GH_TOKEN}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy",
        "ms-python.pylint",
        "ms-python.black-formatter",
        "yzhang.markdown-all-in-one"
      ]
    }
  },
  "updateContentCommand": "pip install --no-cache-dir -r .devcontainer/requirements-dev.txt && pip install --no-cache-dir --no-build-isolation -r .devcontainer/requirements-dev-special.txt"
}