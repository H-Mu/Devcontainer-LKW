{
  "name": "Linguistik-Kraftwerk DevContainer",
  "image": "mcr.microsoft.com/devcontainers/python:3.10-bookworm",
  "features": {
  	"ghcr.io/devcontainers/features/common-utils:2": {
  			"username": "vscode"
  		},
    "ghcr.io/devcontainers/features/desktop-lite:1": {},
    "ghcr.io/devcontainers/features/sshd:1": {
			"START_SSHD": "true",
      "NEW_PASSWORD": "qwertz."
		},
    "ghcr.io/devcontainers/features/github-cli:1": {},
	"./local-features/devtools": {}
  },
  "runArgs": [
			"-e DISPLAY=${localEnv:DISPLAY}",
			"--network=host",
			"--gpus=all"
  	],
  	"mounts": [
  		"source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached"
	]
  "appPort": [
		// 2222 Expose SSH port for tools that need it (e.g. JetBrains)
        // 6080, 5901 für desktop-lite 
        // +4
		"127.0.0.1:2226:2226", "127.0.0.1:6084:6084", "127.0.0.1:5905:5905"
	],
  "portsAttributes": {
    "6084": {
      "label": "desktop"
    },
    "5905": {
      "label": "vnc"
    }
  },
  "remoteEnv": { "GH_TOKEN":"${localEnv:GH_TOKEN}"
  	},
  // Extensions werden in Container installiert, aber nicht in WSL mit übernommen...
  "customizations": {
    "vscode": {
      "extensions": [	"ms-python.python",
            			"ms-python.debugpy",
            			"ms-python.pylint",
            			"ms-python.black-formatter",
            			"yzhang.markdown-all-in-one"
      ]
      }
    },
  	"updateContentCommand": "pip install --no-cache-dir -r .devcontainer/requirements-dev.txt"
  	
}
